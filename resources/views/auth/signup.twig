{% extends 'templates/app.twig' %}
{% block nav %}{% include 'templates/partials/navigationpolos.twig' %}{% endblock %}
{% block content %}
<div class="row" style="padding-top: 155px">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">Sign Up</div>
			<div class="panel-body"> 
				<form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
					<div class="form-group {{errors.username ? ' has-error' : ''}}">
						<label for="username">Name</label>
						<input type="text" name="username" id="name" placeholder="yourname" class="form-control" value="{{ old.username }}">
						{% if errors.username %}
							<span class="help-block">{{ errors.username | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{errors.email ? ' has-error' : ''}}">
						<label for="email">email</label>
						<input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
						{% if errors.email %}
							<span class="help-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{errors.shadow ? ' has-error' : ''}}">
						<label for="Password">Password</label>
						<input type="Password" name="shadow" id="Password" class="form-control">
						{% if errors.shadow %}
							<span class="help-block">{{ errors.shadow | first }}</span>
						{% endif %}
					</div>
					<button type="submit" class="btn button-default">Sign Up</button>
					{{ csrf.field | raw }}
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}