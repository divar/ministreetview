{% extends 'templates/app.twig' %}
{% block nav %}{% include 'templates/partials/navigationpolos.twig' %}{% endblock %}
{% block content %}
<div class="row" style=" padding: 100px;">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-warning">
			<div class="panel-heading" style="background-color: #ffe6a9">Change Password</div>
			<div class="panel-body"> 
				<form action="{{ path_for('auth.changepass') }}" method="post" autocomplete="off"> 
					<div class="form-group {{errors.shadow_old ? ' has-error' : ''}}">
						<label for="password_old">Old Passoword</label>
						<input type="password" name="shadow_old" id="password_old" placeholder="" class="form-control" value="{{ old.shadow_old }}">
						{% if errors.shadow_old %}
							<span class="help-block">{{ errors.shadow_old | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{errors.shadow ? ' has-error' : ''}}">
						<label for="Password">Password</label>
						<input type="Password" name="shadow" id="Password" class="form-control">
						{% if errors.shadow %}
							<span class="help-block">{{ errors.shadow | first }}</span>
						{% endif %}
					</div>
					<button type="submit" class="btn button-default">Change Password</button>
					{{ csrf.field | raw }}
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}